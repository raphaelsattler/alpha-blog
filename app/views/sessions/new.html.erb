<h1 class="center"> Log in</h1>

<%= form_for(:session, url: login_path) do |f| %>
	<div class="form-group row">
		<div class="text-right col-sm-2 col-form-label ">
				<%= f.label :email %>
		</div>
		<div class="col-sm-8">
				<%= f.text_field :email, class: "form-control", placeholder: "Enter email", autofocus: true %>
		</div>
	</div>

	<div class="form-group row">
		<div class="text-right col-sm-2 col-form-label ">
				<%= f.label :password %>
		</div>
		<div class="col-sm-8">
				<%= f.password_field :password, class: "form-control", autocomplete: "off" %>
		</div>
	</div>

	<div class="form-group row">
		<div class="offset-sm-8 col-sm-8">
				<%= f.submit"Log in", class: 'btn btn-primary' %>
		</div>
	</div>
<% end %>

<div class="offset-sm-4">
	[ <%= link_to "Cancel request and return to articles listing", articles_path %> ]
</div>