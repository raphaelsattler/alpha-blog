<% if obj.errors.any? %>
	<div class="row">	
		<div class="col-sm-8 offset-sm-2">
			<div class="alert alert-danger">
					<h5 class="alert-heading">
						<strong>
							<%= pluralize(obj.errors.count, "error") %>
						prohibited this article from being saved:
						</strong>						
					</h5>
						<ul>
							<% obj.errors.full_messages.each do |msg| %>
								<li><%= msg %></li>
							<% end %>
						</ul>
			</div>
		</div>
	</div>
<% end %>