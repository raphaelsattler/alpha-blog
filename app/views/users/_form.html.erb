<%= render 'shared/errors', obj: @user %>

<%= form_for @user do |f| %>
	<div class="form-group row">
		<div class="text-right col-sm-2 col-form-label ">
				<%= f.label :username %>
		</div>
		<div class="col-sm-8">
				<%= f.text_field :username, class: "form-control", placeholder: "Enter username", autofocus: true %>
		</div>
	</div>

	<div class="form-group row">
		<div class="text-right col-sm-2 col-form-label ">
				<%= f.label :email %>
		</div>
		<div class="col-sm-8">
				<%= f.email_field :email, class: "form-control", placeholder: "Enter email" %>
		</div>
	</div>

	<div class="form-group row">
		<div class="text-right col-sm-2 col-form-label ">
				<%= f.label :password %>
		</div>
		<div class="col-sm-8">
				<%= f.password_field :password, class: "form-control", placeholder: "Enter password" %>
		</div>
	</div>

	<div class="form-group row">
		<div class="offset-sm-8 col-sm-8">
				<%= f.submit(@user.new_record? ? "Sign up" : "Update account", class: 'btn btn-primary') %>
		</div>
	</div>
<% end %>

<div class="offset-sm-4">
	[ <%= link_to "Cancel request and return to articles listing", articles_path %> ]
</div>