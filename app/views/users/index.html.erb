<h1 class="center">All Alpha Bloggers</h1>

<div class="center">
	<div class="pagination justify-content-center">
		<%= will_paginate %>
	</div>
	<% @users.each do |user| %>
		<ul class="listing">
			<div class="row">
				<div class="card bg-light col-md-4 offset-md-4">
					<div class="card-block">
						<li><%= link_to gravatar_for(user), user_path(user) %></li>
						<li class="article-title"><%= link_to user.username, user_path(user) %></li>
						<li><small><%= pluralize(user.articles.count, "article") if user.articles %></small></li>
						<% if logged_in? and current_user.admin? %>
							<li><%= link_to "Delete this user", user_path(user), method: :delete, data: {confirm: "Are sure you want delete the user and all their articles?" }, class: "btn btn-xs btn-danger" %></li>
						<% end %>
					</div>				
				</div>			
			</div>		
		</ul>
	<% end %>
	<div class="pagination justify-content-center">
		<%= will_paginate %>
	</div>
</div>